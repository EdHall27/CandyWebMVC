@model CandyWebMVC.Models.ViewModel.UserRegistrationViewModel

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <fieldset>
                <legend>Dados do Usuário</legend>
                <div class="form-group">
                    <label asp-for="User.UserName">Nome</label>
                    <input asp-for="User.UserName" class="form-control" />
                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.UserEmail">Email</label>
                    <input asp-for="User.UserEmail" class="form-control" />
                    <span asp-validation-for="User.UserEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.UserPhone">Phone</label>
                    <input asp-for="User.UserPhone" class="form-control" />
                    <span asp-validation-for="User.UserPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.CPFID">CPF</label>
                    <input asp-for="User.CPFID" class="form-control" />
                    <span asp-validation-for="User.CPFID" class="text-danger"></span>
                </div>
            </fieldset>

            <fieldset>
                <legend>Dados de Login</legend>
                <div class="form-group">
                    <label asp-for="Password">Senha</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </fieldset>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
