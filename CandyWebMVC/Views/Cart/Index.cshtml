@model List<Cart>

<h1>Shopping Cart</h1>

<div id="cart">
    @foreach (var item in Model)
    {
        <div class="product">
            <img src="@Url.Content(item.Product.ImagePath)" style="max-width: 200px; max-height: 200px;" alt="@item.ProductName" class="product-image">
            <div class="product-details">
                <span>@item.ProductName - $@item.ProductPrice</span>
                <div class="quantity">
                    Quantity: <span class="item-quantity">@item.Quantity</span>
                </div>
                <div>
                    <button class="btn-remove" data-product-id="@item.Id">Remove</button>
                </div>

            </div>
        </div>
    }
</div>


