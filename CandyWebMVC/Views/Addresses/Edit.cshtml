@model CandyWebMVC.Models.ViewModel.AddressViewModel

@{
    ViewData["Title"] = "Edit Address";
}

<h2>Edit Address</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="NewAddress.Id" />
    <input type="hidden" asp-for="CPFID" />
    <input type="hidden" asp-for="NewAddress.CPFID" />
    <div class="form-group">
        <label asp-for="NewAddress.Street" class="control-label">Rua</label>
        <input asp-for="NewAddress.Street" class="form-control" />
        <span asp-validation-for="NewAddress.Street" class="text-danger"></span>
    </div>
   <div class="form-group">
        <label asp-for="NewAddress.City" class="control-label">Cidade</label>
        <input asp-for="NewAddress.City" class="form-control" />
        <span asp-validation-for="NewAddress.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewAddress.State" class="control-label">Estado</label>
        <input asp-for="NewAddress.State" class="form-control" />
        <span asp-validation-for="NewAddress.State" class="text-danger"></span>
    </div>
   <div class="form-group">
        <label asp-for="NewAddress.CEP" class="control-label">CEP</label>
        <input asp-for="NewAddress.CEP" class="form-control" />
        <span asp-validation-for="NewAddress.CEP" class="text-danger"></span>
    </div>
 
    <button type="submit" class="btn btn-primary">Save</button>
</form>

